<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}AER{% endblock %}</title>
        {% block stylesheets %}
            <!--le premier link permet le css de base.html-->
            <link href="{{ asset('/css/base.css') }}" rel="stylesheet">
            <!--le second link permet le css des pages.html(on parle de toute les entities)-->
            <link href="{{ asset('/css/pages.css') }}" rel="stylesheet">
            <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="baseBodyContainer">
        <header>
            <!--concatenation de la class headerContainer avec la df(display flex)-->
            <div class="headerContainer ">
                <div class="headerLogo ">
                    <img src="{{ asset('image/logo.png') }}" alt="ADRAR" />
                </div>
                <div class="headerUe">
                    <img class="imageUe" src="{{ asset('image/ue.png') }}" alt="ADRAR" />
                </div>
            </div>
        </header>
        {% block javascripts %}

            <script src="{{ asset("js/jquery.js") }}"></script>
            <script src="{{ asset("js/bootstrap.js") }}"></script>

            <script src="{{ asset("js/validator.js") }}"></script>
        {% endblock %}
        {% block body %}
        {% endblock %}

    </div>
    </body>
</html>
