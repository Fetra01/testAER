{% extends 'base.html.twig' %}

{% block body %}


    <div class="panel panel-info">
        {#<div class="panel-heading">Vous allez repondre au QCM "{{ title | capitalize }}"</div>#}
        <div class="panel-body">
            <form action="{{ path('resultStudentrenseigner_index',{'id' : 0})}}" method="post">
                <label for="name">Nom </label><input id="name" type="text" name="student" required placeholder="Entrer votre nom" class="form-control">
               {% for question in quizz %}
                    <div>
                        <h2  class="page-header">{{ question.question }}</h2>
                        {% for key,proposition in question.proposition %}
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <div class="checkbox">
                                        <label><input type="radio" name="response" value="{{ proposition }}" >&nbsp;{{ proposition }}</label>
                                    </div></li></ul>
                        {% endfor %}
                        <hr>
                        <hr>
                        <hr>
                    </div>
                {% endfor %}
                <button type="submit" class="btn btn-success btn-block">Valider</button>
            </form>
        </div>
    </div>


{% endblock %}