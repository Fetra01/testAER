{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promotion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Promo</th>
                <td>{{ promotion.promo }}</td>
            </tr>
            <tr>
                <th>Entrydate</th>
                <td>{% if promotion.entryDate %}{{ promotion.entryDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Leavingdate</th>
                <td>{% if promotion.leavingDate %}{{ promotion.leavingDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Localization</th>
                <td>{{ promotion.localization }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promotion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
