{% extends 'base.html.twig' %}

{% block body %}
    <h1>Student</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ student.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ student.password }}</td>
            </tr>
            <tr>
                <th>Entrydate</th>
                <td>{% if student.entryDate %}{{ student.entryDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Leavingdate</th>
                <td>{% if student.leavingDate %}{{ student.leavingDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('student_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('student_edit', { 'id': student.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
